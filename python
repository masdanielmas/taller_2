print("Ejercicios Tiempo de Viaje")

valores = 0

while True:
    try:
        tiempoTrayecto = float(input("Ingresa el tiempo del trayecto en minutos (o 0 para finalizar): "))        
        if tiempoTrayecto == 0:
            break  
        elif tiempoTrayecto < 0:
            print("El tiempo debe ser mayor o igual que 0.")
        else:
             tiempoTrayecto
    except ValueError:
        print("Ingresa un número válido.")


tiempoTotalHoras = tiempoTrayecto / 60
minutos1= tiempoTrayecto % 60

print("El tiempo total en horas es:", tiempoTotalHoras,":" , minutos1 ,"horas")

